{
  "manifest_version": 2,
  "name": "Lute",
  "version": "5.1.0",
  "short_name": "Lute",
  "author":"CHergott",
  "description": "Download music from Pandora.",
  "icons": {
    "128": "images/lute-logo128.png"
  },
  "offline_enabled": false,
  "options_ui": {
    "page": "html/options.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_title": "Lute"
  },
  "permissions": [
    "*://*.pandora.com/*",
    "webRequest",
    "downloads",
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": [
      "js/lute.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.pandora.com/*"
      ],
      "js": [
        "js/pandora.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "js/*",
    "images/*",
    "themes/*"
  ]
}
