{
  "manifest_version": 2,
  "name": "Lute",
  "version": "5.0.0",
  "short_name": "Lute",
  "author":"CHergott",
  "description": "Download music from music services like Pandora and SoundCloud.",
  "icons": {
    "128": "images/lute-logo128.png"
  },
  "offline_enabled": false,
  "options_ui": {
    "page": "options/template.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_title": "Lute"
  },
  "permissions": [
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "downloads",
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": [
      "main/lute.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.pandora.com/*"
      ],
      "js": [
        "external/jquery-2.1.4.min.js",
        "main/pandora.js"
      ]
    },
    {
      "matches": [
        "*://*.soundcloud.com/*"
      ],
      "js": [
        "external/jquery-2.1.4.min.js",
        "main/soundcloud.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "main/*",
    "images/*"
  ]
}
